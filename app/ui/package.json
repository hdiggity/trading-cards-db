{
  "name": "trading-cards-ui",
  "version": "1.0.0",
  "description": "Trading cards verification UI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently --names \"API,WEB\" --prefix-colors \"blue,green\" \"nodemon server.js\" \"cd client && npm start\"",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}